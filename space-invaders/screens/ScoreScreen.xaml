<Window x:Class="CapstoneProg3.screens.ScoreScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CapstoneProg3.screens"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="ScoreScreen" Height="720" Width="500">
    <Window.Resources>
        <FontFamily x:Key="FontSpace">/Fonts/#Space Invaders"</FontFamily>
    </Window.Resources>
    
    <Grid Background="Black">
        <Grid Margin="0 20 0 0" Width="500" Height="150" VerticalAlignment="Top" >
            <Image Name="SpaceInvadersTitle" />
        </Grid>
        
        <Grid Width="500" Margin="0 180 0 0" Height="500">
            <!-- <TextBlock Name="TextTitle" HorizontalAlignment="Center" Foreground="White"  -->
            <!--            FontSize="20" FontFamily="pack://application:,,,/Fonts/#Space Invaders"> Score Screen </TextBlock> -->
            
            <StackPanel Name="ScoresPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
